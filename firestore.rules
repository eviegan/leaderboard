// Firestore rules â€” paste into Firebase Console > Firestore > Rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public read of leaderboard entries
    match /leaderboards/{boardId}/entries/{entryId} {
      allow read: if true; // public leaderboard
      // Write only by whitelisted admin UIDs
      allow write: if request.auth != null
                   && request.auth.uid in ['YOUR_UID_HERE', 'ANOTHER_UID_OPTIONAL'];
    }
  }
}
