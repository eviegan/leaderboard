rules_version = '2';
service cloud.firestore {
match /databases/{database}/documents {


// Public can read boards for display
match /tenants/{tenantId}/leaderboards/{boardId}/entries/{entryId} {
allow read: if true;
// Only the logged-in tenant can write their own data
allow write: if request.auth != null && request.auth.uid == tenantId;
}
}
}
